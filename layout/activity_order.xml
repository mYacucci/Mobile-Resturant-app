<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.no.finallab.Order"
    android:background="@drawable/orderbground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ltext"
        android:layout_below="@+id/btext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dtext"
        android:layout_below="@+id/ltext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dstext"
        android:layout_below="@+id/dtext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bptext"
        android:layout_marginRight="32dp"
        android:layout_alignTop="@+id/ltext"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lptext"
        android:layout_marginRight="21dp"
        android:layout_alignTop="@+id/btext"
        android:layout_alignStart="@+id/bptext"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dptext"
        android:layout_marginRight="32dp"
        android:layout_alignTop="@+id/dtext"
        android:layout_alignStart="@+id/bptext"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dsptext"
        android:layout_marginRight="32dp"
        android:layout_alignTop="@+id/dstext"
        android:layout_alignStart="@+id/dptext"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView2"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small"
            android:id="@+id/small"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:id="@+id/medium"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large"
            android:id="@+id/large"
            android:textColor="#ffffff" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Drink Size"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/dstext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Order"
        android:id="@+id/clear"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_above="@+id/clear"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pricetext"
        android:layout_above="@+id/back"
        android:layout_toEndOf="@+id/dstext"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Order Price"
        android:id="@+id/buttonprice"
        android:layout_above="@+id/back"
        android:layout_alignEnd="@+id/back" />

</RelativeLayout>
